{
  "name": "AI-CHATBOT",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  "forwardPorts": [5000],
  "portsAttributes": {
    "5000": {
      "label": "Flask app",
      "onAutoForward": "openBrowser"
    }
  },

  "postCreateCommand": "python -m venv .venv",

  "postStartCommand": ". .venv/bin/activate && pip install -r requirements.txt",

  "remoteUser": "vscode",

  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/workspaces/AI-CHATBOT/.venv/bin/python",
        "python.terminal.activateEnvironment": true
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "github.copilot"
      ]
    }
  }
}
